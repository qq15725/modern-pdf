{
  "name": "modern-pdf",
  "type": "module",
  "version": "1.0.0",
  "packageManager": "pnpm@9.9.0",
  "description": "Generate PDF in a way that describes the DOM.",
  "author": "wxm",
  "license": "MIT",
  "homepage": "https://github.com/qq15725/modern-pdf",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/qq15725/modern-pdf.git"
  },
  "bugs": {
    "url": "https://github.com/qq15725/modern-pdf/issues"
  },
  "keywords": [
    "pdf",
    "pdf-encode",
    "pdf-codec",
    "generate-pdf",
    "modern-pdf"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "browser": "./dist/index.js",
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*",
        "./dist/index.d.ts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite docs",
    "lint": "eslint src",
    "test": "vitest",
    "build": "vite build && unbuild",
    "version": "conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md",
    "release": "bumpp package.json --commit \"release: v%s\" --push --all --tag",
    "typecheck": "tsc --noEmit",
    "prepare": "simple-git-hooks"
  },
  "dependencies": {
    "colord": "^2.9.3",
    "fflate": "^0.8.2",
    "modern-font": "^0.3.4",
    "modern-idoc": "^0.0.3",
    "modern-path2d": "^1.0.0",
    "modern-text": "^1.0.2"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.12.0",
    "@types/node": "^22.10.2",
    "bumpp": "^9.9.2",
    "conventional-changelog-cli": "^5.0.0",
    "eslint": "^9.17.0",
    "lint-staged": "^15.2.11",
    "simple-git-hooks": "^2.11.1",
    "typescript": "^5.7.2",
    "unbuild": "^3.0.1",
    "vite": "^6.0.5",
    "vitest": "^2.1.8"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint src --fix"
  }
}
