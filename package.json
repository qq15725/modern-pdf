{
  "name": "modern-pdf",
  "type": "module",
  "version": "1.3.0",
  "packageManager": "pnpm@9.9.0",
  "description": "Generate PDF in a way that describes the DOM.",
  "author": "wxm",
  "license": "MIT",
  "homepage": "https://github.com/qq15725/modern-pdf",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/qq15725/modern-pdf.git"
  },
  "bugs": {
    "url": "https://github.com/qq15725/modern-pdf/issues"
  },
  "keywords": [
    "pdf",
    "pdf-encode",
    "pdf-codec",
    "generate-pdf",
    "modern-pdf"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "browser": "./dist/index.js",
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*",
        "./dist/index.d.ts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite docs",
    "lint": "eslint src",
    "test": "vitest",
    "build": "vite build && unbuild",
    "version": "conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md",
    "release": "bumpp package.json --commit \"release: v%s\" --push --all --tag",
    "typecheck": "tsc --noEmit",
    "prepare": "simple-git-hooks"
  },
  "dependencies": {
    "colord": "^2.9.3",
    "fflate": "^0.8.2",
    "modern-font": "^0.4.1",
    "modern-idoc": "^0.8.9",
    "modern-path2d": "^1.4.9",
    "modern-text": "^1.7.6"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.3.0",
    "@types/node": "^24.3.1",
    "bumpp": "^10.2.3",
    "conventional-changelog-cli": "^5.0.0",
    "eslint": "^9.35.0",
    "lint-staged": "^16.1.6",
    "simple-git-hooks": "^2.13.1",
    "typescript": "^5.9.2",
    "unbuild": "^3.6.1",
    "vite": "^7.1.5",
    "vitest": "^3.2.4"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint src --fix"
  }
}
